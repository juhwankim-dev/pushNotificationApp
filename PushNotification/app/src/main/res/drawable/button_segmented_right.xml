<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorPrimary" />
                    <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorPrimary" />
                    <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
                </shape>
            </item>

            <item android:bottom="1dp" android:right="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/colorPrimary" />
                    <corners android:bottomRightRadius="12dp" android:topRightRadius="12dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="1dp" android:color="@color/colorPrimary" />
                    <corners android:bottomRightRadius="6dp" android:topRightRadius="6dp" />
                </shape>
            </item>
            <item android:bottom="1dp" android:right="1dp" android:left="1dp" android:top="1dp">
                <shape android:shape="rectangle">
                    <solid android:color="@android:color/white" />
                    <corners android:bottomRightRadius="6dp" android:topRightRadius="6dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>