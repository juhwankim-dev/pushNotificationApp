<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    tools:context=".ui.setting.appnotice.content.NoticeContentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:elevation="4dp"
        android:background="@drawable/border_layout_bottom"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:padding="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_back" />

        <TextView
            style="@style/headerText"
            android:layout_width="match_parent"
            android:gravity="center"
            android:text="공지사항"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_app_notice_title"
            style="@style/headerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="제목" />

        <ImageView
            android:id="@+id/iv_new"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            app:srcCompat="@drawable/ic_new" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_app_notice_date"
        style="@style/explainText"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="24dp"
        android:text="2020.01.29" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="0.3dp"
        android:layout_margin="20dp"
        android:background="@color/colorBlackDisabled2"/>

    <TextView
        android:id="@+id/tv_app_notice_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="5dp"
        android:lineSpacingMultiplier="1.1"
        android:text="본문 내용"
        android:textColor="#000000"
        android:textSize="13dp" />
</LinearLayout>