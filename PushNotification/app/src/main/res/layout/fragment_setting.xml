<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.setting.SettingFragment">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar_keywrod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="4dp"
            android:fitsSystemWindows="true">

            <androidx.appcompat.widget.Toolbar
                style="@style/headerText"
                android:id="@+id/app_toolbar_keyword"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/appBarMargin"
                app:titleTextColor="@color/colorWhite"
                app:title="설정"
                android:layout_gravity="center"
                android:contentInsetLeft="0dp"
                android:contentInsetStart="0dp"
                app:contentInsetLeft="0dp"
                app:contentInsetStart="0dp"
                android:contentInsetRight="0dp"
                android:contentInsetEnd="0dp"
                app:contentInsetRight="0dp"
                app:contentInsetEnd="7dp"/>

        </com.google.android.material.appbar.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_push_setting"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:padding="@dimen/activity_margin"
            android:background="@drawable/border_layout_bottom"
            android:orientation="horizontal">

            <TextView
                style="@style/bodyText"
                android:layout_gravity="center_vertical"
                android:text="알림 설정"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/layout_send_email"
            android:elevation="2dp"
            android:background="@drawable/border_layout_bottom"
            android:padding="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/bodyText"
                android:layout_gravity="center_vertical"
                android:text="문의하기"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:id="@+id/layout_profile"
            android:background="@drawable/border_layout_bottom"
            android:padding="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/bodyText"
                android:layout_gravity="center_vertical"
                android:text="개발자 정보"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right_24dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout_license"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:background="@drawable/border_layout_bottom"
            android:padding="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/bodyText"
                android:layout_gravity="center_vertical"
                android:text="오픈소스 라이센스"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_right_24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:elevation="2dp"
            android:background="@drawable/border_layout_bottom"
            android:padding="@dimen/activity_margin"
            android:orientation="horizontal">

            <TextView
                style="@style/bodyText"
                android:id="@+id/txt_current_version"
                android:layout_gravity="center_vertical"
                android:text="현재 버전 1.0.0"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/colorGray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:padding="10dp"
                android:textSize="9dp"
                android:text="Copyright Juhwan Kim, All Rights Reserved." />
        </LinearLayout>
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>